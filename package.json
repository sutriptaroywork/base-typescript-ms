{
  "name": "base-project",
  "version": "1.0.0",
  "description": "Basic structure for Typescript Project",
  "main": "app/server.ts",
  "scripts": {
    "test": "npm run clean && npm run build && cross-env NODE_ENV=test jest --testTimeout=10000 --detectOpenHandles --silent=false --forceExit",
    "nodemon": "nodemon --transpile-only ./app/server.ts",
    "dev": "cross-env NODE_ENV=development && npm run nodemon",
    "clean": "rm -r dist",
    "start": "npm run build && node ./dist/server.js",
    "build": "swc app -d dist --source-maps --copy-files",
    "migrate:create": "sequelize migration:generate --name",
    "migrate": "npx sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "migrate:reset": "sequelize db:migrate:undo:all",
    "lint": "eslint . --ext .ts,.js app",
    "lint:fix": "eslint . --ext .ts,.js app --fix"
  },
  "author": "Sutripta Roy",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsc-node": "^0.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@sentry/node": "^7.73.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.90",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/mysql": "^2.15.22",
    "@types/node": "^20.8.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.1.0",
    "mongoose": "^7.6.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.6.1",
    "redis": "^4.6.10",
    "sequelize": "^6.33.0",
    "sequelize-cli": "^6.6.1",
    "sequelize-fixtures": "^1.2.0",
    "tslib": "^2.6.2",
    "zod": "^3.22.4"
  }
}
